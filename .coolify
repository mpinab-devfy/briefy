# Coolify configuration for Nixpacks deployment
# This is the recommended approach for React applications

# Use Nixpacks instead of Docker
buildpack=nixpacks

# Environment variables needed for build
build_env_vars=REACT_APP_SUPABASE_URL,REACT_APP_SUPABASE_ANON_KEY,REACT_APP_GEMINI_API_KEY,REACT_APP_BASE_URL

# Port configuration
port=3000

# Health check
health_check_path=/

# Build command (optional, Nixpacks will detect automatically)
build_command=npm ci && npm run build

# Start command (optional, Nixpacks will detect automatically)
start_command=npx serve -s build -p $PORT